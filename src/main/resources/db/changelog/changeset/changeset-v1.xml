<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="1" author="karthik">
        <createTable tableName="CUSTOMER_INFO_BATCH">
            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="firstName" type="varchar(255)"></column>
            <column name="last-name" type="varchar(255)"></column>
            <column name="email" type="varchar(255)"></column>
            <column name="gender" type="varchar(255)"></column>
            <column name="contact-number" type="varchar(255)"></column>
            <column name="country" type="varchar(255)"></column>
            <column name="dob" type="varchar(255)"></column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="karthik">
        <insert tableName="CUSTOMER_INFO_BATCH">
            <column name="id" value="0" />
            <column name="firstName" value="123" />
            <column name="last-name" value="cfdfjd" />
            <column name="email" value="fdjfdj@gmail.com" />
        </insert>
    </changeSet>
    <changeSet author="karthik" id="3::dataForTable" labels="data">
        <loadData file="./customers.csv" tableName="CUSTOMER_INFO_BATCH">
        <column name="id" header="id"  />
            <column name="id" header="id"  />
            <column name="firstName" header="firstName"  />
            <column name="last-name" header="lastName"  />
            <column name="email" header="email"  />
            <column name="gender" header="gender"  />
            <column name="contact-number" header="contactNo"  />
            <column name="country" header="country"  />
            <column name="dob" header="dob"  />
        </loadData>
    </changeSet>

</databaseChangeLog>

